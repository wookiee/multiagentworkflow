# Multi-Agent Workflow Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ANTHROPIC API
# =============================================================================
# Get your API key from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-...

# =============================================================================
# GITHUB TOKENS
# =============================================================================
# Create Personal Access Tokens with repo scope for each agent account
# https://github.com/settings/tokens

# Claudius (claudiusward) GitHub token
CLAUDIUS_GITHUB_TOKEN=ghp_...

# Claudette (claudetteward) GitHub token
CLAUDETTE_GITHUB_TOKEN=ghp_...

# =============================================================================
# GIT CONFIGURATION
# =============================================================================
# Git identity for Claudius
CLAUDIUS_GIT_NAME=Claudius Ward
CLAUDIUS_GIT_EMAIL=claudiusward@users.noreply.github.com

# Git identity for Claudette
CLAUDETTE_GIT_NAME=Claudette Ward
CLAUDETTE_GIT_EMAIL=claudetteward@users.noreply.github.com

# =============================================================================
# N8N CONFIGURATION
# =============================================================================
# n8n host configuration (use Tailscale IP for remote access)
N8N_HOST=100.95.141.86
N8N_PROTOCOL=http
WEBHOOK_URL=http://100.95.141.86:5678

# n8n basic auth (change these!)
N8N_USER=admin
N8N_PASSWORD=your-secure-password-here

# Timezone
TIMEZONE=America/Los_Angeles

# =============================================================================
# WORKFLOW LIMITS
# =============================================================================
# Maximum review iterations before escalating to human
MAX_ITERATIONS=5

# Timeout in hours before escalating to human
TIMEOUT_HOURS=24

# =============================================================================
# SLACK NOTIFICATIONS (optional)
# =============================================================================
# Slack webhook URL for escalation notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
