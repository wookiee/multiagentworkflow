# Multi-Agent Workflow Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ANTHROPIC API
# =============================================================================
# Get your API key from https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-api03-...

# =============================================================================
# GITHUB TOKENS
# =============================================================================
# Create Personal Access Tokens with repo scope for each bot account
# https://github.com/settings/tokens

# Coder bot GitHub token
CODER_GITHUB_TOKEN=ghp_...

# Reviewer bot GitHub token
REVIEWER_GITHUB_TOKEN=ghp_...

# =============================================================================
# GIT CONFIGURATION
# =============================================================================
# Git identity for the Coder bot
CODER_GIT_NAME=Coder Bot
CODER_GIT_EMAIL=coder-bot@yourdomain.com

# Git identity for the Reviewer bot
REVIEWER_GIT_NAME=Reviewer Bot
REVIEWER_GIT_EMAIL=reviewer-bot@yourdomain.com

# =============================================================================
# N8N CONFIGURATION
# =============================================================================
# n8n host configuration
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678

# n8n basic auth (change these!)
N8N_USER=admin
N8N_PASSWORD=your-secure-password-here

# Timezone
TIMEZONE=UTC

# =============================================================================
# WORKFLOW LIMITS
# =============================================================================
# Maximum review iterations before escalating to human
MAX_ITERATIONS=5

# Timeout in hours before escalating to human
TIMEOUT_HOURS=24
